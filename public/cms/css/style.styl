            display block !important
            overflow hidden
            li.nav-item
                display block
                float left
                margin 0 auto 12px !important
                width 16%
                a.nav-link
                    text-align center
                    i
                        //color $color01
                        font-size 2em
                    span
                        display block
                        font-size .8em
                        font-weight normal
                        margin-top 4px
                        width 100%
    .rsp-navbar
        display none !important
    /*.rsp-wrapper
        min-height 100vh*/
    aside
        .main
            min-height 100vh
            display block !important
            margin-top 1px !important
            overflow hidden
            li.nav-item
                display block
                float none
                margin 0
                width 100%
                padding 0
            a.nav-link
            a.dropdown-item
                text-align center
                i
                    margin 0 auto
                    display block
                    font-size 1.5em
                    width 100%
                span
                    margin 0 auto
                    display block
                    font-size .8em
                    font-weight normal
                    margin-top 4px
                    width 100%
            .sidebar-header
                margin-top 2px !important
                text-align center !important 
                h3
                    display none
                strong
                    display block
            .rsp-collapse
                ul
                    li
                        a
                            margin 0 auto !important
                            display block !important
                            text-align center !important
                            width 100% !important
                            i
                                margin 0 auto 3px !important
                                display block !important
                                width 100% !important
                                font-size 1.5em !important
                            span
                                margin 0 auto !important
                                display block !important
                                font-size 1em !important
                                width 100% !important
    footer
        font-size 60% !important
    .carousel-caption
        h3
            font-size 70% !important
        p
            font-size 40% !important
