/*==============================================*/
/* PALETA DE COLORES                            */
/*==============================================*/
$color01 = #000066
$color02 = #F97722
$color03 = #00C300
$color04 = #030303
$color05 = #fff
$color07 = #e8e8e8
$color08 = #333
$color09 = #222
$color10 = #f0f0f0
$color11 = #666
$color12 = #50508f
$facebook-color = #3b5998
$twitter-color = #55acee
$google-color = #dd4b39
/*==============================================*/
/* PANTALLAS NORMALES - NAVEGADORES WEB         */
/*==============================================*/
/*-----------------------*/
/*     Id #styl-name     */
/*  class .styl-name     */
/*-----------------------*/
html
body
    margin 0
    box-sizing border-box
    padding 0
.mtop16
    margin-top 16px
.mtop32
    margin-top 32px
.mb16
    margin-bottom 16px
.mb32
    margin-bottom 32px
.styl-login
.styl-register
.styl-verify
.styl-confirm
.styl-email
.styl-reset
    display flex
    justify-content center
    align-items center
    width 70%
    margin 0 auto
    min-height 84vh
.styl-row-login
.styl-row-register
.styl-row-verify
.styl-row-confirm
.styl-row-email
.styl-row-reset
    position relative
    width: 100%
.btn-facebook
    background-color $facebook-color
    border-color darken($facebook-color, 3%)
.btn-twitter
    background-color $twitter-color
    border-color darken($twitter-color, 3%)
.btn-google
    background-color $google-color
    border-color darken($google-color, 3%)
.btn-facebook
.btn-twitter
.btn-google
    color white
    &:hover
    &:active
    &:focus
        color: white;
    img
        position relative
        top -2px
        width 15px
.styl-navbar-aux1
.styl-navbar-aux2
    display none
.styl-navbar
    background-color #030303
    .styl-logo
        img
            position relative
            top -2px
            width 150px
.styl-dropdown
.styl-dropdown-aux1
    .dropdown-menu
        a
            &:hover
                background-color $color03
                color #fff
.styl-user
    background-color #030303
    img
        position relative
        width 20px
        border-radius 50%
        top -2px
/*.styl-wrapper
    min-height 100vh
    overflow hidden*/
aside
    display inline-block
    width 20%
    min-height 150vh
    //background-color $color01
    //color #666 !important
    .main
        display block
        margin-top 12px
        ul
            display inline-block
            width 100%
            li
                margin-bottom 4px
                a
                    //color #fff !important
                    color #666 !important
                    display block
                    font-size 1.1em
                    padding 12px 12px
                    text-decoration none
                    i
                        width 10px
                        margin-right 10px
                    &:hover
                        //background-color $color03
                        //box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        //color #fff !important
                        color $color03 !important
                        font-size 1.2em
                a.active
                    //background-color $color01
                    //box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                    //color #fff !important
                    color $color01 !important
        .sidebar-header
            margin-top 14px
            //background-color $color02
            text-align left 
            padding 8px 10px 5px
            //color #fff
            color #666
            font-size 1.5em
            font-weight bold
            strong
                display none
        .styl-collapse
            //background-color $color12 !important
            ul
                li
                    a
                        //color #fff !important
                        &:hover
                            //background-color $color03 !important
                            color $color03 !important
                            font-size 1.2em
                    i
                        //color #fff !important
                        margin-left 20px !important
                    span
                        //color #fff !important
                        font-size 1.1em
section
    display inline-block
    position absolute
    width 80%
    .navbar
        //background-color $color01
        //color #fff !important
        color #666
        min-height 8vh
        font-size 20px
        p
            margin-top 10px
        a
            //color #fff !important
            color #666 !important
    .breadcrumb
        margin-top 10px
        background-color #fff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
        .breadcrumb-item
            a
                text-decoration none !important
    article
        margin-top 5px
.slideanim
    .card
        //margin 5px 5px 5px
        margin-right 5px
        margin-bottom 5px
        span
            margin-top 20px
            margin-bottom 10px
            font-size 3em
            color $color02
        h4
            color $color02
        p
            margin-top 10px
            color #666
        &:hover
            background-color $color03
            box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
            span
            h4
            p
                color #fff !important
.cursor-pointer
    cursor pointer
#subir
    position fixed
    display none
    bottom 10%
    right 0
    width 50px
    border-radius 50%
    font-size 200%
    cursor pointer
    border none
footer
    color #666
    padding-right 20px
    position fixed
    z-index 999
    bottom 0
    width 100%
    text-align right
    font-size 70%
    .styl-logo-jrcomputersystem
        img
            position relative
            top -4px
            width 70px
    span
        margin-right 30px
.carousel-inner
    img
        filter grayscale(20%)
        //width 100%
        //height 572px
        //margin auto
.carousel-caption
    h3
    p
        color #fff !important
        //color $color04 !important
.carousel-control-prev-icon
.carousel-control-next-icon
    color $color04 !important
.slide
    animation-name slide
    animation-duration 1s
    visibility visible
/*@keyframes slide
    0%
      opacity 0
      transform translateY(70%)
    100%
      opacity 1
      transform translateY(0%)*/
